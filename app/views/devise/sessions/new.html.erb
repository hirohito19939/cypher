<div class="touroku-form lp">
<h3>ログイン</h3>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "fukidashi" %><br />
    <br>
    <br>
    <%= f.email_field :email, autofocus: true, class: "nyuuryoku" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :password, class: "fukidashi" %><br />
    <br>
    <br>
    <%= f.password_field :password, autocomplete: "off", class: "nyuuryoku" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ユーザー情報を記憶する %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "ログイン", class: "button button2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>