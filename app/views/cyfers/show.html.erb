 <div class="cyfer-block">
    <center><h2><%= @cyfer.name %><br>
    <%= image_tag @cyfer.avatar, :size => "300x200" %></h2>
    </center>
  </div>

  <center>
  <div class="half-box-container clearfix">
  <div class="half-block left">
    <h3>開催場所</h3>
    <hr>
    <%= @cyfer.place %>
  </div>
  <div class="half-block right">
    <h3>開催日時</h3>
    <hr>
    <%= @cyfer.date_time%>
  </div>
  </div>
  </center>

  <div class="block">
    <h3>サイファーの紹介</h3>
    <%= @cyfer.detail %>
  </div>

  <div class="block">
    <h3>参加予定MC</h3>
    <% @cyfer.users.each do |user| %>
    <a href="/users/<%= user.id %>"><%= user.mc_name %></a><br>
    <% end %>
  </div>

<% if @keys.where(cyfer_id:params[:id], user_id:current_user.id).present? %>
<div class="block">
<%= form_tag(cyfer_key_path(@cyfer.id,current_user.id), method: :delete) do %>
<%= submit_tag("不参加に変更") %>
<% end %>
  </div>
<% else %>
  <div class="block">
<%= form_tag(cyfer_keys_path(@cyfer.id), method: :post) do %>
<%= submit_tag("回答する") %>
<% end %>
<% end %>
  </div>

    <div class="block">
    <%= form_for [@cyfer, @comment] do |f| %>
          <div style="margin: 8px 0">
            <%= f.text_area :comment, placeholder: '投稿内容', style: 'width: 100%;height: 300px;' %>
          </div>
          <%= button_tag type: "submit", class: "btn btn--block" do %>投稿する<i class="icon-arrow-right"></i>
          <% end %>
<% end %>
  </div>

  <div class="block">
  <% @comments.each do |comment| %>
    <a href="/users/<%= comment.user.id %>"><%= comment.user.mc_name %></a> 投稿日時:<%= comment.created_at %><br>
  <%= comment.comment %>
  <hr>
  <% end %>
  </div>